{
  "name": "chahuadev-sentinel",
  "displayName": "Chahuadev Sentinel",
  "description": "Universal Grammar System - Multi-language code reader with AST parsing, binary tokenization, and intelligent structure analysis",
  "version": "2.0.0-beta",
  "author": "Chahua Development Co., Ltd.",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "grammar",
    "parser",
    "ast",
    "code-reader",
    "multi-language",
    "binary-tokenizer",
    "binary-error-system",
    "universal-reporter",
    "chahua",
    "typescript",
    "javascript",
    "python",
    "java",
    "vscode-extension",
    "cli-tool"
  ],
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=22.0.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./extension-wrapper.js",
  "contributes": {
    "commands": [
      {
        "command": "chahuadev-sentinel.parseFile",
        "title": "Parse Current File (AST)",
        "category": "Chahuadev Sentinel"
      },
      {
        "command": "chahuadev-sentinel.analyzeWorkspace",
        "title": "Analyze Entire Workspace",
        "category": "Chahuadev Sentinel"
      },
      {
        "command": "chahuadev-sentinel.showGrammarInfo",
        "title": "Show Grammar Information",
        "category": "Chahuadev Sentinel"
      }
    ],
    "configuration": {
      "title": "Chahuadev Sentinel",
      "properties": {
        "chahuadev-sentinel.enableRealTimeParsing": {
          "type": "boolean",
          "default": false,
          "description": "Enable real-time AST parsing while typing"
        },
        "chahuadev-sentinel.parseOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically parse files when saved"
        },
        "chahuadev-sentinel.showASTPreview": {
          "type": "boolean",
          "default": false,
          "description": "Show AST preview in side panel"
        },
        "chahuadev-sentinel.supportedLanguages": {
          "type": "array",
          "default": ["javascript", "typescript", "python", "java", "cpp", "go", "rust"],
          "description": "Languages to parse (11 languages supported)"
        },
        "chahuadev-sentinel.parserMode": {
          "type": "string",
          "enum": ["structure", "full", "minimal"],
          "default": "structure",
          "description": "Parser mode: structure (default), full (with semantics), minimal (tokens only)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == javascript || editorLangId == typescript || editorLangId == python || editorLangId == java",
          "command": "chahuadev-sentinel.parseFile",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "chahuadev-sentinel.analyzeWorkspace",
          "group": "navigation"
        }
      ]
    }
  },
  "files": [
    "src/",
    "cli.js",
    "emoji-cleaner.js",
    "scan-real-files.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node cli.js",
    "parse": "node cli.js .",
    "demo": "node cli.js src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chahuadev-com/Chahuadev-Sentinel.git"
  },
  "bugs": {
    "url": "https://github.com/chahuadev-com/Chahuadev-Sentinel/issues"
  },
  "homepage": "https://github.com/chahuadev-com/Chahuadev-Sentinel#readme"
}
